# Default data directory
PP_BASE_DIR=/var/data

# Where to store counts.
# NOTE: Appended to PP_BASE_DIR/
PP_METRICS_FILE=pp_metrics.dat

# OUI used by packet purchaser (see https://developer.helium.com/blockchain/blockchain-cli#oui)
PP_OUI=999

# DC amount to open State Channels with (default: 100)
PP_SC_OPEN_DC_AMOUNT=100

# Number of blocks to expire State Channels (default: 25)
PP_SC_EXPIRATION_INTERVAL=25

# State Channel Expiration Buffer
# Minimum distance state channels can expire within another expiration
# default: 15 when not set
PP_SC_EXPIRATION_BUFFER=15

# Default LNS Address and port
PP_LNS_ADDRESS=127.0.0.1
PP_LNS_PORT=1700

# Enable xor filter worker (or not)
PP_ENABLE_XOR_FILTER=false

# Chripstack integration config
PP_CHIRPSTACK_ENPOINT=http://localhost:8080
PP_CHIRPSTACK_APP_ID=1
PP_CHIRPSTACK_API_KEY=XXXXXX
PP_CHIRPSTACK_APP_EUI=0000000000000000

## PP_ALLOW_JOINS set to false will ignore ALL join packets (default: true)
PP_ALLOW_JOINS=true

## Net IDs filters.
## When left blank, no filtering will be performed. (default: allow_all)
##
## Example:
## PP_NET_IDS=16#000022, 16#000013
##
## Note: Numbers will be interpreted as base-16
##
PP_NET_IDS=allow_all
